<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Andrew alert Portfolio", sticky: false, time:1000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Andrew error Portfolio", sticky: false, time:1000) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Andrew default Portfolio", sticky: false, time:1000) %>
<% end %>